<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CloudVeil.Windows.Styles">
    <Style x:Key="BaseFontStyle" TargetType="{x:Type FrameworkElement}">
        <Setter Property="TextElement.FontFamily" Value="Segoe UI" />
        <Setter Property="TextElement.FontWeight" Value="UltraLight" />
        <Setter Property="TextElement.Foreground" Value="Black" />
    </Style>

    <Style x:Key="{x:Type FrameworkElement}" TargetType="{x:Type FrameworkElement}" BasedOn="{StaticResource BaseFontStyle}">

    </Style>

    <Style x:Key="HeaderStyle" TargetType="{x:Type Label}" BasedOn="{StaticResource BaseFontStyle}">
        <Setter Property="FontSize" Value="22" />
    </Style>

    <Style x:Key="DefaultTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseFontStyle}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="Black" />
    </Style>
</ResourceDictionary>